{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "outDir": "app/dist",
    "baseUrl": "app",
    "incremental": true,
    "skipLibCheck": true,
    "sourceMap": true,
  },
  "exclude": ["node_modules", "app/test", "app/dist", "**/*spec.ts", "client"]
}
